--- Violent Solution ---

class Solution {
    public int removeElement(int[] nums, int val) {
        int len = nums.length;
        for(int i = 0; i < len; i++){
            if(nums[i] == val){
                for(int j = i + 1; j < len; j++){
                    nums[j-1] = nums[j];
                }
                i--;
                len--;
            }
            
           
            
        }
        return len;
    }
}

--- Concurrent Double Pointer ---

class Solution {
    public int removeElement(int[] nums, int val) {
        int slowIndex = 0;
        for(int fastIndex = 0; fastIndex < nums.length; fastIndex++){
            if(nums[fastIndex] != val){
                
                nums[slowIndex] = nums[fastIndex];
                slowIndex++;
            }
        }
        return slowIndex;
    }
}

